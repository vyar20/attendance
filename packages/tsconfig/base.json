{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declaration": true,
    "paths": {
      "@/*": [
        "./src/*",
        "../../packages/db/src/*",
        "../../packages/env/src/*",
        "../../packages/utils/src/*",
        "../../packages/validations/src/*",
        "../../packages/trpc/src/*",
        "../../packages/ui/src/*",
        "../../apps/backend/src/*",
        "../../apps/mobile/src/*"
      ],
      "@repo/tsconfig/*": ["../../packages/tsconfig/*"],
      "@repo/prettier/*": ["../../packages/prettier/*"],
      "@repo/env/*": ["../../packages/env/src/*"],
      "@repo/db/*": ["../../packages/db/src/*"],
      "@repo/utils/*": ["../../packages/utils/src/*"],
      "@repo/validations/*": ["../../packages/validations/src/*"],
      "@repo/trpc/*": ["../../packages/trpc/src/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"]
    }
  }
}
