{
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@repo/prettier/*": ["../../packages/prettier/*"],
      "@repo/tsconfig/*": ["../../packages/tsconfig/*"],
      "@repo/eslint/*": ["../../packages/eslint/*"],
      "@repo/utils/*": ["../../packages/utils/src/*"],
      "@repo/trpc/*": ["../../packages/trpc/src/*"],
      "@repo/env/*": ["../../packages/env/src/*"]
    }
  }
}
